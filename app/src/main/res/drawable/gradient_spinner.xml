<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>

                    <solid android:color="@color/white" />

                    <stroke android:width="1dp" android:color="@color/light_grey" />

                    <corners android:radius="3dp" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="16dp" android:top="3dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center_vertical|end" android:src="@drawable/down_arrow"  />
            </item>
        </layer-list>
    </item>

</selector>