<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/design_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_rounded_corner_primary">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/linotte_semi_bold"
                android:text="@string/reset"
                android:textColor="@color/colorLogout"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/linotte_bold"
                android:text="@string/filter"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/linotte_semi_bold"
                android:text="@string/cancel"
                android:textColor="@color/colorLogout"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/relMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/consHeader"
        android:paddingStart="@dimen/_15sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:paddingBottom="@dimen/_12sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/linotte_semi_bold"
                android:text="@string/price"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintBottom_toTopOf="@+id/llPriceValue"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llPriceValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPrice">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_weight=".5"
                    android:background="@drawable/edittext_bg"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtTextMinPrice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="@string/min_price"
                        android:inputType="number"
                        android:maxLines="1"
                        android:padding="@dimen/_10sdp"
                        android:textAlignment="center"
                        android:textSize="@dimen/_10sdp" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_weight=".5"
                    android:background="@drawable/edittext_bg"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtTextMaxPrice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="@string/max_price"
                        android:inputType="number"
                        android:maxLines="1"
                        android:padding="@dimen/_10sdp"
                        android:textAlignment="center"
                        android:textSize="@dimen/_10sdp" />

                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/consPrice"
            android:layout_marginTop="@dimen/_8sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCustomerRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/linotte_semi_bold"
                android:text="@string/customer_rating"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintBottom_toTopOf="@+id/llCustomerRating"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llCustomerRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCustomerRating">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvRateFirst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edittext_bg"
                        android:drawableStart="@drawable/ic_star"
                        android:drawablePadding="@dimen/_3sdp"
                        android:drawableTint="@color/light_grey"
                        android:gravity="center"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text="1.0"
                        android:textColor="@color/light_grey"
                        android:textSize="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_12sdp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvRateSecond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edittext_bg"
                        android:drawableStart="@drawable/ic_star"
                        android:drawablePadding="@dimen/_3sdp"
                        android:drawableTint="@color/light_grey"
                        android:gravity="center"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text="2.0"
                        android:textColor="@color/light_grey"
                        android:textSize="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_12sdp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvRateThird"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edittext_bg"
                        android:drawableStart="@drawable/ic_star"
                        android:drawablePadding="@dimen/_3sdp"
                        android:drawableTint="@color/light_grey"
                        android:gravity="center"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text="3.0"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:textColor="@color/light_grey"
                        android:textSize="@dimen/_8sdp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvRateFourth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edittext_bg"
                        android:drawableStart="@drawable/ic_star"
                        android:drawablePadding="@dimen/_3sdp"
                        android:drawableTint="@color/light_grey"
                        android:gravity="center"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text="4.0"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:textColor="@color/light_grey"
                        android:textSize="@dimen/_8sdp" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvRateFifth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edittext_bg"
                        android:drawableStart="@drawable/ic_star"
                        android:drawablePadding="@dimen/_3sdp"
                        android:drawableTint="@color/light_grey"
                        android:gravity="center"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:text="5.0"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:textColor="@color/light_grey"
                        android:textSize="@dimen/_8sdp" />


            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/consRating"
            android:layout_marginTop="@dimen/_18sdp"
            android:background="@drawable/edittext_bg"
            android:drawableEnd="@drawable/ic_top_drop_arrow"
            android:drawableTint="@color/light_grey"
            android:editable="false"
            android:ems="10"
            android:focusable="false"
            android:hint="@string/categroy"
            android:inputType="text"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_10sdp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextSubCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextCategory"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/edittext_bg"
            android:drawableEnd="@drawable/ic_top_drop_arrow"
            android:drawableTint="@color/light_grey"
            android:editable="false"
            android:ems="10"
            android:focusable="false"
            android:hint="@string/sub_category"
            android:inputType="text"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_10sdp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextBrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextSubCategory"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/edittext_bg"
            android:drawableEnd="@drawable/ic_top_drop_arrow"
            android:drawableTint="@color/light_grey"
            android:editable="false"
            android:ems="10"
            android:focusable="false"
            android:hint="@string/brand"
            android:inputType="text"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_10sdp" />
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAddToCart"
        style="@style/LogoutButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_32sdp"
        android:text="@string/apply_filter"
        android:layout_below="@+id/relMain"/>
</RelativeLayout>