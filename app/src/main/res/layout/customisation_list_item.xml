<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="customSize"
            type="com.app.ia.model.CustomisationBean" />

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@{customSize.selected ? @drawable/discount_gradient : @drawable/edittext_bg}">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{customSize.sizeValue}"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:layout_gravity="center" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:background="@drawable/discount_gradient"
                android:text="30% Off"
                android:textSize="@dimen/_8sdp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹350"
            android:fontFamily="@font/linotte_bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_11sdp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>